<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading"
    android:layout_width="@dimen/vvwidget_alert_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/lib_common_dialog_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="@string/lib_common_tips"
        android:textStyle="bold"
        android:textColor="@color/vvwidget_font_black"
        android:textSize="@dimen/lib_common_font_size_large_18" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textAlignment="center"
        android:textColor="#797979"
        android:textSize="@dimen/lib_common_font_size_large_16"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="@dimen/lib_common_large_16dp"
        android:layout_marginEnd="@dimen/lib_common_large_16dp"
        android:background="@drawable/lib_common_edit_input_bg"
        android:lineSpacingExtra="2dp"
        android:textSize="@dimen/lib_common_font_size_large_16"
        android:maxLines="3"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="@color/lib_common_actionbar_bg_color" />

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lib_common_dp_44"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="@string/lib_common_cancel"
            android:textSize="18sp"
            android:textColor="@color/lib_common_font_gray"
            android:visibility="visible" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/lib_common_actionbar_bg_color" />

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:textSize="18sp"
            android:text="@string/lib_common_confirm"
            android:textColor="@color/lib_common_blue_dark"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>